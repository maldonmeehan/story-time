<h2><span class="<%= @story.image %>"></span> <%= @story.title %></h2>

<% if @story.sentences.any? %>
  <h4>Here is the story for this Title:</h4>

<ul>
  <% @story.sentences.each do |sentence| %>
    <li>
      <span class="<%= sentence.icon %>"></span> |
      <%= sentence.contribution %> |
      <%= sentence.user %> |
      <%= link_to "Edit", edit_story_sentence_path(@story, sentence) %> |
      <%= link_to "Delete", story_sentence_path(@story, sentence),
                    :data => {:confirm => "Are you sure?",
                      :method => "delete" }%>

    </li>
    <% end %>
</ul>
<% else %>
  <p>There are no sentences yet!</p>
<% end %>

<hr>
<p><%= link_to "Add a sentence", new_story_sentence_path(@story) %></p>
<p><%= link_to "Edit", edit_story_path(@story) %></p>
<p><%= link_to "Delete Story", story_path(@story),
                :data => {:confirm => "You sure?",
                  :method => "delete"} %></p>
<hr>
<p><%= link_to "Return to stories", stories_path %></p>
